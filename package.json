{
  "name": "react-ecommerce-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "build:monolith": "npm run build:frontend && npm run build:backend && mkdir -p backend/public && cp -r frontend/dist/* backend/public/",
    "install:all": "npm install",
    "lint:frontend": "npm run lint --workspace=frontend",
    "lint:backend": "npm run lint --workspace=backend",
    "start": "npm run start --workspace=backend",
    "deploy:monolith": "./deploy-monolith.sh"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.5.3"
  }
}